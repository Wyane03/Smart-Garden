<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/picres6"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <!--//整体线性布局-->
       <LinearLayout
           android:id="@+id/mainlayout"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_height="match_parent">
           <!--//主页图片-->
           <ImageView
               android:layout_width="match_parent"
               android:layout_height="140dp"
               android:background="@drawable/huayuan">

           </ImageView>
           <!-- //搜索栏-->
             <SearchView
                 android:id="@+id/search"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:background="#FFCC33"
                 android:queryHint="@string/search"></SearchView>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

           <!--//模式显示布局-->
               <Switch
                   android:id="@+id/modestate"
                   android:layout_width="match_parent"
                   android:textColor="#ffffff"
                   android:textSize="30sp"
                   android:layout_height="50dp"
                   android:textStyle="italic|bold" />
    <!--//数据显示区线性布局-->
           <!-- //第一行线性布局-->
           <LinearLayout
android:layout_marginTop="13dp"
               android:layout_width="match_parent"
               android:layout_height="50dp">
                   <!--//土壤温度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/turangwendu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/soil_temperature"
                       android:layout_height="match_parent">
                   </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/soiltemperature1"
            android:gravity="center_vertical|end"
            android:layout_width="0dp"
            android:textColor="#000000"
            android:layout_weight="5"
            android:textSize="34sp"
            android:text="50"
            android:layout_height="match_parent">
        </TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/sheshidu">
        </ImageView>
    </LinearLayout>
           </LinearLayout>


               <!-- //第二行线性布局............................-->
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <!--//空气温度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/kongqishidu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/air_temperature"
                       android:layout_height="match_parent">
                   </TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <TextView
                           android:id="@+id/airtemperature1"
                           android:gravity="center_vertical|end"
                           android:layout_width="0dp"
                           android:textColor="#000000"
                           android:layout_weight="5"
                           android:textSize="34sp"
                           android:text="@string/blank"
                           android:layout_height="match_parent">
                       </TextView>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:background="@drawable/sheshidu">
                       </ImageView>
                   </LinearLayout>
               </LinearLayout>
<!--第三行显示-->
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <!--//土壤湿度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/turangshidu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/Soil_humidity"
                       android:layout_height="match_parent">
                   </TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <TextView
                           android:id="@+id/soilhumidity1"
                           android:gravity="center_vertical|end"
                           android:layout_width="0dp"
                           android:textColor="#000000"
                           android:layout_weight="5"
                           android:textSize="34sp"
                           android:text="@string/blank"
                           android:layout_height="match_parent">
                       </TextView>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:background="@drawable/baifenbi">
                       </ImageView>
                   </LinearLayout>
               </LinearLayout>

               <!--第四行................................-->
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <!--//空气湿度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/kongqishidu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/air_humidity"
                       android:layout_height="match_parent">
                   </TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <TextView
                           android:id="@+id/airhumidity1"
                           android:gravity="center_vertical|end"
                           android:layout_width="0dp"
                           android:textColor="#000000"
                           android:layout_weight="5"
                           android:textSize="34sp"
                           android:text="@string/blank"
                           android:layout_height="match_parent">
                       </TextView>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:background="@drawable/baifenbi">
                       </ImageView>
                   </LinearLayout>
               </LinearLayout>
           <!--第五行-->
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <!--//空气湿度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/guangzhaoqiangdu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/illumination_intensity"
                       android:layout_height="match_parent">
                   </TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <TextView
                           android:id="@+id/light1"
                           android:gravity="center_vertical|end"
                           android:layout_width="0dp"
                           android:textColor="#000000"
                           android:layout_weight="5"
                           android:textSize="34sp"
                           android:text="@string/blank"
                           android:layout_height="match_parent">
                       </TextView>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:background="@drawable/baifenbi">
                       </ImageView>
                   </LinearLayout>
               </LinearLayout>
           <!--第六行-->
               <LinearLayout
                   android:layout_marginTop="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="50dp">
                   <!--//空气湿度显示-->
                   <ImageView
                       android:layout_width="50dp"
                       android:layout_height="50dp"
                       android:background="@drawable/zheguangchengdu"></ImageView>
                   <TextView
                       android:layout_width="130dp"
                       android:textSize="30sp"
                       android:gravity="center"
                       android:text="@string/Shading_degree"
                       android:layout_height="match_parent">
                   </TextView>
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="50dp">
                       <TextView
                           android:id="@+id/shade1"
                           android:gravity="center_vertical|end"
                           android:layout_width="0dp"
                           android:textColor="#000000"
                           android:layout_weight="5"
                           android:textSize="34sp"
                           android:text="@string/blank"
                           android:layout_height="match_parent">
                       </TextView>
                       <ImageView
                           android:layout_width="0dp"
                           android:layout_height="50dp"
                           android:layout_weight="1"
                           android:background="@drawable/baifenbi">
                       </ImageView>
                   </LinearLayout>
               </LinearLayout>

               <!--按钮布局-->
           <LinearLayout
               android:layout_width="match_parent"
               android:id="@+id/buttonlayout"
               android:layout_height="match_parent">

               <!--//自动模式按钮-->
               <Button
                   android:id="@+id/auto"
                   android:text="@string/auto"
                   android:textColor="#FFFFFF"
                   android:layout_marginEnd="10dp"
                   android:layout_gravity="bottom"
                   style="?android:attr/buttonBarButtonStyle"
                   android:textSize="17sp"
                   android:layout_marginRight="10dp"
                   android:onClick="automode"
                   android:background="#66CCCC"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="60dp">
               </Button>
               <!--//手动模式按钮-->
               <Button
               android:id="@+id/hand"
               android:text="@string/hand"
               android:layout_gravity="bottom"
                   style="?android:attr/buttonBarButtonStyle"
                   android:onClick="handmode"
                   android:textColor="#FFFFFF"
                   android:textSize="17sp"
                   android:layout_marginEnd="10dp"
                   android:layout_marginRight="10dp"
                   android:background="#66CCCC"
                   android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="60dp">
           </Button>

               <!--//退出花园按钮-->
               <Button
                   android:id="@+id/quit"
                   android:text="@string/quit"
                   style="?android:attr/buttonBarButtonStyle"
                   android:textColor="#FFFFFF"
                   android:textSize="17sp"
                   android:background="#66CCCC"
                   android:layout_gravity="bottom"
                   android:onClick="leavegarden"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="60dp">
               </Button>
           </LinearLayout>

           </LinearLayout>

       </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>