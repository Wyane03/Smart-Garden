<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/picres4"
    android:layout_height="match_parent"
    tools:context=".AutoMode">


<LinearLayout
    android:layout_width="match_parent"
    android:background="#66CC99"
    android:layout_height="60sp">
    <!--活动页标题-->

   <ImageButton
       android:layout_width="60sp"
       android:layout_height="60sp"
       android:id="@+id/backward"
       android:onClick="getback"
       android:background="@drawable/back"
       ></ImageButton>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:id="@+id/autotitle"
        android:text="@string/auto"
        android:textSize="40sp"
        android:textStyle="italic"
        android:paddingLeft="60sp"
        android:textColor="#FFFFFF"
        android:paddingStart="60sp">
    </TextView>
</LinearLayout>




    <!--//数据显示区线性布局-->
    <!-- //第一行线性布局.....................................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//土壤温度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/turangwendu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/soil_temperature"
            android:layout_height="match_parent">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <SeekBar
                android:id="@+id/soiltemperature2"
                android:max="35"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11">
            </SeekBar>
            <TextView
                android:id="@+id/soiltemperature_text"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/blank">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/sheshidu">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <!-- //第二行线性布局............................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//空气温度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/kongqiwendu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/air_temperature"
        android:layout_height="match_parent">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <SeekBar
            android:id="@+id/airtemperature2"
            android:layout_width="0dp"
            android:max="40"
            android:layout_height="match_parent"
            android:layout_weight="11">
        </SeekBar>
        <TextView
            android:id="@+id/airtemperature_text"
            android:gravity="center"
            android:layout_weight="3"
            android:textColor="#000000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:text="@string/blank">
        </TextView>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@drawable/sheshidu">
        </ImageView>
    </LinearLayout>
</LinearLayout>
    <!--第三行显示.........................................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//土壤湿度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/turangshidu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/Soil_humidity"
            android:layout_height="match_parent">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <SeekBar
                android:id="@+id/soilhumidity2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11">
            </SeekBar>
            <TextView
                android:id="@+id/soilhumidity_text"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/blank">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/baifenbi">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <!--第四行.................................................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//空气湿度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/kongqishidu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/air_humidity"
            android:layout_height="match_parent">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <SeekBar
                android:id="@+id/airhumidity2"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="11"></SeekBar>
            <TextView
                android:id="@+id/airhumidity_text"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/blank">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/baifenbi">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <!--第五行................................................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//光照强度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/guangzhaoqiangdu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/illumination_intensity"
            android:layout_height="match_parent">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <SeekBar
                android:id="@+id/light2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11">
            </SeekBar>
            <TextView
                android:id="@+id/light_text"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/blank">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/baifenbi">
            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <!--第六行...................................................-->
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <!--//遮光程度显示-->
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/zheguangchengdu"></ImageView>
        <TextView
            android:layout_width="130dp"
            android:textSize="30sp"
            android:gravity="center"
            android:text="@string/Shading_degree"
            android:layout_height="match_parent">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <SeekBar
                android:id="@+id/shade2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="11">
            </SeekBar>
            <TextView
                android:id="@+id/shade_text"
                android:gravity="center"
                android:layout_weight="3"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:text="@string/blank">
            </TextView>
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/baifenbi">
            </ImageView>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/setauto"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:background="@drawable/yes2"
        style="@style/Widget.AppCompat.ActionButton"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:onClick="setauto"></ImageButton>
</LinearLayout>
